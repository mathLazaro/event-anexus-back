{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask (Debug com Hot Reload)",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development"
            },
            "args": ["run"],
            "jinja": true,
            "justMyCode": true
        }
    ]
}
